<%= form_for [@card, @comment], html: { class: 'space-y-4' } do |f| %>
  <% if @comment.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">エラー</strong>
      <span class="block sm:inline"><%= pluralize(@comment.errors.count, "件") %>の問題があります。</span>
      <ul class="list-disc pl-5 space-y-1">
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="mb-4">
    <%= f.label :body, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.text_area :body, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-200' %>
  </div>
  <div class="flex items-center justify-between">
    <%= f.submit "コメントを更新", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>
