<div class="mx-auto mb-6 max-w-4xl">
  <%= form_with model: comment, url: [card, comment], local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mb-4">
      <%= f.label :body, Comment.human_attribute_name(:body), class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_area :body, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50', rows: 4, placeholder: t('defaults.comment_placeholder') %>
    </div>
    <%= f.submit t('defaults.post'), class: 'px-4 py-2 text-sm bg-blue-500 hover:bg-blue-700 text-white font-bold rounded' %>
  <% end %>
</div>