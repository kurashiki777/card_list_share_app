<div class="container mx-auto">
  <div class="grid grid-cols-12">
    <div class="md:col-span-10 md:col-start-2 lg:col-span-8 lg:col-start-3">
      <h1 class="text-2xl font-bold mb-6"><%= t '.title' %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="mb-4">
          <%= f.label :last_name, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :last_name, class: 'mt-1 p-2 border rounded-md w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :first_name, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :first_name, class: 'mt-1 p-2 border rounded-md w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.email_field :email, class: 'mt-1 p-2 border rounded-md w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.password_field :password, class: 'mt-1 p-2 border rounded-md w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.password_field :password_confirmation, class: 'mt-1 p-2 border rounded-md w-full' %>
        </div>

        <%= f.submit t('defaults.register'), class: 'bg-blue-500 text-white px-4 py-2 rounded-full' %>
      <% end %>

      <div class='text-center mt-4'>
        <%= link_to t('.to_login_page'), login_path, class: 'text-blue-500' %>
      </div>
    </div>
  </div>
</div>