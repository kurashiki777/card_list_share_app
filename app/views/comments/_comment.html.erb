<tr id="comment-<%= comment.id %>" class="bg-white">
  <td class="p-3">
    <%= image_tag comment.user.avatar_url, class: 'rounded-full', width: '50', height: '50' %>
  </td>
  <td class="p-3">
    <h3 class="text-sm font-semibold"><%= comment.user.decorate.full_name %></h3>
    <div class="text-gray-700">
      <%= simple_format(comment.body) %>
    </div>
    <% if current_user.own?(comment) %>
      <div class="mt-2 flex space-x-2">
        <%= link_to "編集", "#", class: "px-4 py-2 text-sm bg-green-500 hover:bg-green-700 text-white font-bold rounded", "data-comment-id" => comment.id %>
        <%= button_to '削除', card_comment_path(comment.card, comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "px-4 py-2 text-sm bg-red-500 hover:bg-red-700 text-white font-bold rounded" %>
      </div>
    <% end %>
  </td>
</tr>